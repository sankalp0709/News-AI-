# Noopur Backend API Configuration
# Base URL for Noopur backend service
NEXT_PUBLIC_NOOPUR_API_BASE=http://localhost:8001
# API key for Noopur (if required)
NEXT_PUBLIC_NOOPUR_API_KEY=your_noopur_api_key_here

# Sankalp Insight Node API Configuration
# Base URL for Sankalp audio generation and feedback service
NEXT_PUBLIC_SANKALP_API_BASE=http://localhost:8000
# API key for Sankalp (if required)
NEXT_PUBLIC_SANKALP_API_KEY=your_sankalp_api_key_here

# Seeya Orchestration API Configuration
# Base URL for Seeya pipeline orchestration service
NEXT_PUBLIC_SEEYA_API_BASE=http://localhost:8002
# API key for Seeya (if required)
NEXT_PUBLIC_SEEYA_API_KEY=your_seeya_api_key_here

# Security Configuration (SSPL-III)
# JWT token for authentication
NEXT_PUBLIC_JWT_TOKEN=your_jwt_token_here
# HMAC secret for request signing
NEXT_PUBLIC_HMAC_SECRET=your_hmac_secret_here

# Audio Files Configuration
# Base URL for serving audio files (Sankalp audio_path will be appended)
NEXT_PUBLIC_AUDIO_BASE_URL=http://localhost:8000/data/audio

# Environment
# Set to 'development' or 'production'
NEXT_PUBLIC_ENV=development

